<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.amap.api.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map" />
    <TextView
            android:id="@+id/head"
            android:text="王种子"
            android:textSize="24sp"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/head_shadow"
            android:drawableLeft="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mark"
        android:layout_centerHorizontal="true"
        android:layout_width="0px"
        android:layout_height="1px" />
    <TextView
            android:id="@+id/upload"
            android:text="上报"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="28sp"
            android:layout_marginBottom="24dp"
        android:layout_toLeftOf="@id/mark"
            android:layout_alignParentBottom="true"
            android:background="@drawable/upload_shadow"
            android:layout_width="80sp"
            android:layout_height="80sp"/>
    <TextView
        android:id="@+id/warring"
        android:text="报警"
        android:textColor="@android:color/white"
        android:background="@drawable/warring_shadow"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/mark"
        android:layout_alignParentBottom="true"
        android:layout_width="80sp"
        android:layout_height="80sp" />
</RelativeLayout>