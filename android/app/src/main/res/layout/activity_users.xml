<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:text="优秀" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/level1" android:text="90" android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content"/>
        <TextView android:text="良好" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/level2" android:text="80" android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content"/>
        <TextView android:text="及格" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/level3" android:text="60" android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content"/>
        <TextView android:text="得分" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/level4" android:text="30" android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_gravity="right"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
        <Button
                android:id="@+id/calculate"
                android:text="计算"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/export"
                android:text="导出"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <ListView android:id="@+id/user_list"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
</LinearLayout>